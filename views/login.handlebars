<div class='d-flex justify-content-center'>
  <div class='login-card'>
    <h2 class='page-title login-margin'>Login</h2>
    <form
      class='form login-form d-flex flex-column justify-content-center align-items-left' action="/login" method="POST"
    >
      <div class='form-group'>
        <label for='email-login'>Email:</label>
        <input class='form-input' type='email' id='email-login' placeholder='samuel@msn.com' name="email"/>
      </div>

      <div class='form-group'>
        <label for='password-login'>Password:</label>
        <input class='form-input' type='password' id='password-login' placeholder='password' name="password"/>
      </div>

      <div class='form-group d-flex'>
        <button href='#' type="submit" id='loginBtn' class='loginButton'><i
            class='uil uil-signin button-icon'
          ></i>
          Login</button>
        <a href='/signup' id='signupBtn' class='loginButton'><i
            class='uil uil-edit'
          ></i>
          Sign Up</a>
      </div>
      {{message}}
    </form>
  </div>
</div>

